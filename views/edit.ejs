<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product</title>
  </head>
  <body>
    <form action="/products/<%=found._id%>?_method=PUT" method="post">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        id="name "
        placeholder="enter item name"
        value="<%=found.name%>"
      />
      <label for="number">Price</label>
      <input
        type="text"
        name="price"
        placeholder="enter price"
        value="<%=found.price%>"
      />
      <label for="category">Select category</label>
      <select name="category" id="category">
        <%for(let list of category){%>
        <option value="<%=list%>" <%= found.category === list ? 'selected' : '' %>><%=list%></option>
        <%}%>
      </select>
      <button>send</button>
    </form>
  </body>
</html>
